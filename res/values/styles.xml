<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.Sherlock.Light.DarkActionBar">
    </style>
    
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="standard_list">
    	<item name="android:fadingEdge">none</item>
    	<item name="android:scrollbars">none</item>
    	<item name="android:divider">#a0a0a0</item>
    	<item name="android:dividerHeight">1dip</item>
    </style>
	<style name="details_label">
	 	<item name="android:textSize">10dip</item>
 		<item name="android:textColor">#aaffffff</item>
 	</style>
 	<style name="details_value">
 		<item name="android:paddingBottom">7dip</item>
 		<item name="android:textColor">#ffffffff</item>
 	</style>
 	<!-- Widget Styles -->
 	<style name="SlidingTabWidget">
 		<item name="separationWidth">75</item>
 	</style>
 	<style name="SlidingTabScrollView">
 	</style>


</resources>
